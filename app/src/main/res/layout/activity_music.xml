<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMusic"
    android:padding="10dp"
    tools:context="com.dream.lantutv.SystemMusicPlayer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/music_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_alignParentLeft="true"
            android:src="@drawable/player_nav_back_selector"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:src="@drawable/player_nav_menu_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/music_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:text="李白"/>
        <TextView
            android:id="@+id/music_artist"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:text=" —  李荣浩  — "/>

        <android.support.v4.view.ViewPager
            android:id="@+id/music_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/switch_circle_selector"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/switch_circle_enable_shap"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/music_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:text="00:00"/>
            <SeekBar
                android:id="@+id/music_seekbar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/music_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:text="04:33"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/music_type"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@mipmap/music_order"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/music_last"
                    android:layout_marginRight="20dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/music_last_selector"/>
                <ImageView
                    android:id="@+id/music_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@mipmap/music_play"/>
                <ImageView
                    android:id="@+id/music_next"
                    android:layout_marginLeft="20dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/music_next_selector"/>
            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@drawable/music_list_selector"/>
        </LinearLayout>
    </LinearLayout>
    

</RelativeLayout>
