<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/video_content"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/video_item_icon"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="星球大战8：原力觉醒"/>
            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="时长：128分钟"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/video_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="大小：123MB"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#dd6495">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/video_del"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/video_item_delete_selector"
                android:padding="5dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#f9bb72">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/video_info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/video_item_info_selector"
                android:padding="5dp" />
        </RelativeLayout>
    </LinearLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>