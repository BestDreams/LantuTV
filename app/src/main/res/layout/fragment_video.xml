<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dream.fragment.VideoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/video_search_bg_shape">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/video_search"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#7F7F7F"
                    android:text="全网搜索"/>
            </LinearLayout>
        </LinearLayout>

        <com.yalantis.phoenix.PullToRefreshView
            android:id="@+id/video_pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/video_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"></ListView>
        </com.yalantis.phoenix.PullToRefreshView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/video_loading"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/video_loading_shape">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="PacmanIndicator"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="Loading"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/video_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video_empty"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空空如也"/>
    </LinearLayout>
</FrameLayout>
